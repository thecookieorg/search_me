<%= render 'admin_dashboards/navbar' %>

<div class="jumbotron text-center">
  <h1>Restaurants</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <%= turbo_stream_from "restaurants" %>

      <%= turbo_frame_tag "restaurant_form" do %>
        <%= render "restaurants/form", restaurant: @restaurant %>
      <% end %>

      <hr />
      <div class="mt-5">
        <%= turbo_frame_tag "restaurants" do %>
          <%= render @restaurants %>
        <% end %>
      </div>
    </div><!-- end col-md-12 -->
  </div><!-- end row -->
</div><!-- end container -->
