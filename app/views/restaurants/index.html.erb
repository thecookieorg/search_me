<%= render 'admin_dashboards/navbar' %>

<div class="jumbotron text-center">
  <h1>Restaurants</h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-success mb-3" %>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>About</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @restaurants.each do |restaurant| %>
            <tr>
              <td><%= restaurant.name %></td>
              <td><%= restaurant.address %></td>
              <td><%= restaurant.latitude %></td>
              <td><%= restaurant.longitude %></td>
              <td><%= restaurant.about %></td>
              <td><%= link_to 'Show', restaurant %></td>
              <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
              <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- end col-md-12 -->
  </div><!-- end row -->
</div><!-- end container -->
