<section class="animated-container"></section>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 text-center" style="margin-top: 4rem;">
      <h3>search<strong>ME</strong></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 offset-md-3 card" style="margin-top: 2rem;">
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: 'Email address',
                        label: 'Email address',
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        placeholder: 'Password',
                        label: 'Password',
                        input_html: { autocomplete: "current-password" } %>
            <%# f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: 'btn btn-lg btn-block btn-dark' %>
          </div>
        <% end %>
        
      </div><!-- end card-body -->
    </div>
  </div>
</div><!-- end container -->